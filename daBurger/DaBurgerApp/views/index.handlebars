<h1>Burgers!</h1>

<h2>Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.eaten}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="eaten" value="true">
          <button type="submit">Eat Burger!</button>
        </form>

        {{>burgers/delete-burgers}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if this.eaten}}
      <li>
        {{this.burger_name}}

       {{!--  <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="false">
          <button type="submit">Eaten!</button>
        </form> --}}

        {{> burgers/delete-burgers}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> eaten!<br>
    <input type="radio" name="eaten" value="0"> not eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
